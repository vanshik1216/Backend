generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id      Int      @id @default(autoincrement()) //@id for primary key---- default for default value yha hmne autoincrement pass kia hai mtlb khud generate hoke bdhte rhegi

  email   String   @unique                       //@unique for no duplicates
  name    String?                               //here ? means null but yha optional
  password String
  tweet   Tweet[]      //one to many 
}
model Tweet{
  id Int  @id @default(autoincrement())
  content String
  userId Int
  user  User  @relation(fields: [userId], references: [id] ,onDelete: Cascade)  //one to one 
  //fields meim foreign key and references mein primary key user table kaa 
}